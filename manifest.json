{
    "manifest_version": 2,
    "name": "plugin sec 1",
    "version": "1.0.1",
    "description": "Uma extensão para gerenciar segurança em site",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*/*",
        "contextualIdentities",
        "tabs",
        "storage",
        "cookies",
        "activeTab",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icons/icon.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png"
        }
    }
}